<%= render "pages/header" %>
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |c| %>
                <div class="form-group row">
                    <%= c.label :name, "Category", class: "col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= c.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
                    </div>
                </div>
                <br>
                <div class="d-grid gap-2 col-4 mx-auto">
                    <%= c.submit class: "btn btn-outline-dark btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
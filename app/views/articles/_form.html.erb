<div class="container">
<%= form_with(model: @article, local: true) do |form| %>
<div class="row justify-content-center">
    <div class="col-8 shadow p-3 mb-5 bg-light rounded">
        <%= render "shared/errors", obj: @article %>
        <div class="form-group row">
            <%= form.label :title, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
                <%= form.text_field :title, class: "form-control shadow p-2 mb-1 bg-white rounded"%>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :description, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
                <%= form.text_area :description, rows: 10, class: "form-control shadow p2 mb-1 bg-white rounded" %>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :category, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
                <%= form.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection(s) from the list"}, {multiple: true, class: "form-select shadow rounded"})%>
            </div>
        </div>
            <br>
            <div class="d-grid gap-2 col-3 mx-auto">
                <%= form.submit class: "btn btn-outline-dark btn-lg"%>
            </div>
            <div class="d-grid gap-1 col-2 mx-auto">
                <%= link_to "[  Back to articles  ]", articles_path %>
            </div>
    <% end %>
        </div>
    </div>
</div>
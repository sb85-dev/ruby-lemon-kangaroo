<%= render "pages/header" %>
<h1 class="text-center mt-4">Log in</h1>
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
        <br>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-dark" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-dark" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        <br>
        <div class="d-grid gap-2 col-4 mx-auto">
          <%= f.submit "log in", class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
